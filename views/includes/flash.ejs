<% if(success && success.length){  %>
  <div id="flash-success" class="alert alert-success alert-dismissible fade show col-6 offset-3 row-1" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){  %>
  <div id="flash-error" class="alert alert-danger alert-dismissible fade show col-6 offset-3 row-1" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<script>
  setTimeout(() => {
    const successAlert = document.getElementById('flash-success');
    const errorAlert = document.getElementById('flash-error');

    if (successAlert) {
      successAlert.classList.remove('show');
      successAlert.classList.add('fade');
      setTimeout(() => successAlert.remove(), 500);
    }

    if (errorAlert) {
      errorAlert.classList.remove('show');
      errorAlert.classList.add('fade');
      setTimeout(() => errorAlert.remove(), 500);
    }
  }, 2000); 
</script>
